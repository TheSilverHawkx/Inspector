{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "O:\\Programs\\mingw-w64\\mingw64\\bin\\g++.exe",
			"args": [
				"-Wall",
				"-std=c++17",
				"-I",
				"${workspaceFolder}\\include",
				"-g",
				"${workspaceFolder}\\Source\\Server\\main.cpp",
				"${workspaceFolder}\\Source\\Monitor-Blocks\\*.cpp",
				"${workspaceFolder}\\Source\\Monitor-Blocks\\Command\\windows-*.cpp",
				"${workspaceFolder}\\Source\\Monitor-Blocks\\Script\\windows-*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\main.exe"
			],
			"options": {
				"cwd": "O:\\Programs\\mingw-w64\\mingw64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file- Linux",
			"command": "/usr/bin/g++",
			"args": [
				"-Wall",
				"-std=c++17",
				"-I",
				"${workspaceFolder}/include",
				"-g",
				"${workspaceFolder}/Source/Server/main.cpp",
				"${workspaceFolder}/Source/Monitor-Blocks/*.cpp",
				"${workspaceFolder}/Source/Monitor-Blocks/Command/linux-*.cpp",
				"${workspaceFolder}/Source/Monitor-Blocks/Script/linux-*.cpp",
				"-o",
				"${workspaceFolder}/bin/main"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}